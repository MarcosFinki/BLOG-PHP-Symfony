{% extends 'base.html.twig' %}

{% block title %}Listado de TODOS los Restaurantes!{% endblock %}

{% block body %}
<style>
    body {
        background-color: #121212;
        color: #e0e0e0;
        font-family: 'Arial', sans-serif;
    }

    .example-wrapper {
        margin: 2em auto;
        max-width: 800px;
        width: 95%;
        padding: 20px;
        border-radius: 10px;
        background-color: #1e1e1e;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
    }

    .example-wrapper h1 {
        font-size: 1.8em;
        color: #64ffda;
        text-align: center;
        margin-bottom: 1em;
    }

    .alert {
        padding: 10px 15px;
        border-radius: 5px;
        margin-bottom: 10px;
        font-weight: bold;
    }

    .alert-success {
        background-color: #4caf50;
        color: white;
    }

    .alert-warning {
        background-color: #ffa726;
        color: white;
    }

    .alert-danger {
        background-color: #ef5350;
        color: white;
    }

    .example-wrapper ul {
        list-style: none;
        padding: 0;
    }

    .example-wrapper ul a {
        text-decoration: none;
        display: block;
        padding: 10px;
        margin: 5px 0;
        border-radius: 5px;
        background: linear-gradient(90deg, #6a0dad, #00bfff);
        color: #fff;
        text-align: center;
        transition: transform 0.3s ease, background-color 0.3s ease;
    }

    .example-wrapper ul a:hover {
        background: #64ffda;
        color: #121212;
        transform: scale(1.05);
    }

    .example-wrapper button {
        background-color: #6a0dad;
        color: #fff;
        border: none;
        padding: 10px 20px;
        margin: 10px 0;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

    .example-wrapper button:hover {
        background-color: #00bfff;
        transform: scale(1.05);
    }
</style>

<div class="example-wrapper">
    <h1>Listado de TODOS los Restaurantes!! ✅</h1>

    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ type }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <a href="{{ path('index') }}">
        <button>Atrás</button>
    </a>

    <ul>
        {% for restaurante in restaurantes %}
            <a href="{{ path('mostrar_uno_restaurante', { "idRestaurante": restaurante.getId() }) }}">
                <li>{{ restaurante.getNombre() }}</li>
            </a>
        {% endfor %}
    </ul>

    <a href="{{ path('crear_restaurante') }}">
        <button>Crear Nuevo Restaurante</button>
    </a>
</div>
{% endblock %}
